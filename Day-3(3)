import numpy as np
from scipy import stats

# Example data (purchase amounts in dollars)
purchase_amounts = [20, 30, 40, 50, 60, 70, 80, 80, 90, 100]

# Calculate mean (average) purchase amount
mean_purchase_amount = np.mean(purchase_amounts)

# Identify mode (most frequently occurring purchase amount)
mode_purchase_amount = stats.mode(purchase_amounts).mode[0]

# Print results
print("Mean (Average) Purchase Amount:", mean_purchase_amount, "dollars")
